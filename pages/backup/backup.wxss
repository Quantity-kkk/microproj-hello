/* 下面部分内容 */
.backup-items{
  display: -webkit-flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-content: flex-start;
  margin-top:20%;
  justify-content: center;  
}

.backup-items .item-container{
  display: flex;
  width: 100%;
  height: 100%;
  flex-wrap: wrap;
  flex-wrap: wrap;
  align-content: flex-start;
}
.item-container-view{
  display: flex;
  width: 30%;
  height: 30%;
  margin: 5rpx;  
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.item-buttion{
  border-radius: 50rpx;
  height: 100%;
  width: 70%;
  background: rgba(255,255,255,0)
}
.item-text{
  font-size: 24rpx;
}
