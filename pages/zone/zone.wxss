/* pages/zone/zone.wxss */
.btn-edit {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #9FC6FF;
  opacity: 0.9;
}

l-index-list{
  transition: 0.3s;
}

/*联系人*/

.l-selected-class{
  background-color: #06c05f !important;
}

.l-tip-text-class{
  color: #fff !important;
  font-size: 48rpx !important;
}

.l-tip-class{
  background-color: #cccccc !important;
}

.person-item{
  display: flex;
  align-items: center;
  color: #1a1a1a;
  background-color: #fff;
  height: 110rpx;
  box-sizing: border-box;
  padding-left: 30rpx;
}

.person-avatar{
  width: 72rpx;
  height: 72rpx;
  border-radius: 10rpx;
}

.person-name{
  margin-left: 20rpx;
}

.sidebar-class{
  right: 0 !important;
  padding-left: 10rpx !important;
  padding-right: 20rpx !important;
}

.card {
  width: 100% !important;
  margin-bottom: 20rpx !important;
  border-radius: 0 !important;
  padding: 20rpx 30rpx !important;
  box-shadow: none !important;
}

.card-title {
  color: #337559 !important;
  font-weight: bold;
  width: 560rpx;
}

.card-title-anon {
  color: #7a8c9a !important;
  font-weight: bold;
  width: 560rpx;
}

.avater-content {
  color: #333;
  text-align: justify;
  font-size: 28rpx;
  margin: 10rpx 0;
}

.content-close {
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #333;
  font-size: 28rpx;
  margin: 10rpx 0;
}

.text-flod {
  color: #0f6945;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.posters {
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  flex-wrap: wrap;
}

.posters image {
  width: 180rpx;
  height: 180rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.posters .column-one {
  width: 360rpx;
  max-height: 800rpx;
}

.posters .column-two {
  width: 270rpx;
  height: 270rpx;
}

.avater-share-container {
  display: flex;
  flex-direction: row;
  height: 60rpx;
  width: 90%;
  margin: 0 auto;
  margin-top: 10rpx;
  align-items: center;
  justify-content: flex-end;
}

.avater-share-container .like-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 60rpx;
}

.like-container .number {
  margin-left: 10rpx;
}

.like-container l-icon {
  font-weight: bold;
}

.ellipsis {
  margin-top: -38rpx;
}

/* 消息tab css */
.comment-box {
  width: 100%;
  background: #fff;
}

.comment-box .comment {
  display: flex;
  flex-direction: row;
  padding: 0 30rpx;
}

.avatar {
  height: 60rpx;
  width: 60rpx;
  border-radius: 50%;
  margin-top: 30rpx;
}
.comment .comment-right {
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
  padding: 20rpx 0;
  width: 600rpx;
  border-bottom: 1px #f1f1f1 solid;
}

.comment-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 8rpx;
}

.comment-top .time {
  color: #666;
  font-size: 24rpx;
}

.comment-content {
  display: flex;
  flex-direction: row;
}